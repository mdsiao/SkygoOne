@model HRISOnline.Objects.EmpViewDetailsForApproval
@{
    ViewBag.Title = @ViewBag.MyTitle;
}

<!DOCTYPE html>
<html>
    <body>

        <p style="float:right;">
         @Html.ActionLink(" Back", "EmployeeTwoOhOneforApproval", null, new { @class="btn btn-danger" })
       </p>
        <br /> <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                Personal Profile
            </div>

            <div class="panel-body"> 
                <table>
                   
                    <tbody>
                       @foreach (var item in Model.EmployeeProf)
                       {
                         <tr>
                            <th class="col-md-4" >Employee ID </th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.EmployeeId)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Employee Name</th>
                            <td class="col-md-4"> @Html.DisplayFor(a => item.EmployeeName)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Email</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.Email)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Blood Type</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.BloodType)</td>
                        </tr> 
                         <tr>
                            <th class="col-md-4" style="">Home Phone No.</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.HomeNum)</td>
                        </tr>  
                        <tr>
                            <th class="col-md-4" style="">Mobile Phone No.</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.MobileNum)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Permanent Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PermanentAdd)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Present Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PermanentAdd)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Provincial Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.ProvincialAdd)</td>
                        </tr>  
                        <tr>
                            <th class="col-md-4" style="">Person to Notify incase of Emergency</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PersonToNofify)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Relation</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.Relation)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Contact Number</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.ContactNum)</td>
                        </tr>
                          
                       }
                    </tbody>
                </table>

            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                General Information
            </div>
               <div class="panel-body">
                   <div class="container">
                     <div class="row">
                       <div class="col-xs-12">
                           <div class="table-responsive" >
                       <table class="table table-hover" style="width:auto;">
                           <thead>
                               <tr>
                                  <th style="width:auto;">Legal Information Questions</th>
                                  <th style="align-items:center;">YES</th>
                                  <th style="text-align:center;">Circumstance and Details</th>
                               </tr>
                           </thead>
                            <tbody>
                                @foreach (var item in Model.GeneralInformation)
                                {                                 
                                <tr>
                                    <td>Have you ever been convicted of a crime?</td>
                                    @if(item.isYes1 == 1)    
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else   
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail1)</td>                    
                                </tr>
                                <tr>
                                     <td>Have you ever been in a situation that resulted to or lead to a crime but of no intent of yours?</td>
                                    @if (item.isYes2 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                    <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail2)</td>                    
                                </tr>
                                <tr>                   
                                    <td>Have you Syndicated or organized and planned a crime taht caused the loss of life or property?</td>
                                    @if (item.isYes3 == 1)
                                    {
                                        <td style="align-items:center;"><input  type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                    <td style="align-items:center;"><input  type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail3)</td>                  
                                </tr>
                                <tr>
                                    <td>Have you ever been Terminiated from employment for just cause?</td>
                                    @if (item.isYes4 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail4)</td>      
                                </tr>
                                    
                                <tr>
                                    <td>Have you ever been Terminiated from employment for just cause?</td>
                                    @if(item.isYes5 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail5)</td>                    
                                </tr>
                                    
                                 <tr>
                                    <td>Is there a pending case current against you?</td>
                                     @if (item.isYes6 == 1)
                                     {
                                         <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                     }
                                     else
                                     {
                                         <td style="align-items:center;"><input type="checkbox" disabled></td>
                                     }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail6)</td>                        
                                </tr>      
                                <tr>
                                    <td>Are you currently involved in a a case against a person/s or corporation/s</td>
                                    @if (item.isYes7 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.hasDetail7)</td>                    
                                </tr>  
                                        
                                }
                            </tbody>
                       </table>
                           </div>
                         </div>
                       </div>
                   </div>
                   
               </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                Educational Attainment 
            </div>
             <div class="panel-body">
                   <div class="container">
                       <div class="row">
                       <div class="col-xs-12">                                        
                        <div class="table-responsive" >
                       <table class="table table-striped" style="width:auto;">
                           <thead>
                               <tr>                             
                               <th>Educational Attained</th>
                               <th>Name of School</th>
                               <th>Degree</th>
                               <th>Year Attended</th>
                               <th>Honors</th>
                               </tr>
                           </thead>
                           <tbody>
                               @foreach (var item in Model.Educ_attained)
                               {
                                   <tr>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.EducationalAttained)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.NameOfSchool)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.Degree)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.YearAttended)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.Honors)</td>
                                   </tr>
                               }
                           </tbody>
                       </table>
                        </div>
                           </div>
                           </div>
                   </div>
             </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                Work Experience 
            </div>
          <div class="panel-body">
             <div class="container">
                 <div class="row">
                       <div class="col-xs-12">                                        
                        <div class="table-responsive" >
                  <table class="table table-striped" style="width:auto;">
                           <thead>
                                <tr>
                                   <th class="col-md-2">Date Employed</th>
                                   <th class="col-md-2">Position</th>
                                   <th class="col-md-2">Employer</th>
                                   <th class="col-md-2">Employment Status</th>
                                   <th class="col-md-2">Reason for Leaving</th>
                                </tr>
                           </thead>
                            @foreach (var item in Model.Work_Exp)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(a => item.strDateEmployeed)</td>
                                    <td>@Html.DisplayFor(a => item.strPosition)</td>
                                    <td>@Html.DisplayFor(a => item.strEmployerName)</td>
                                    <td>@Html.DisplayFor(a => item.strEmploymentStatus)</td>
                                    <td>@Html.DisplayFor(a => item.strReason)</td>
                                </tr>
                            }

                  </table>
                </div>
                </div>
            </div>
             </div>
          </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                Work Experience 
            </div>
            <div class="panel-body">
                 <div class="container">
                     <div class="row">
                       <div class="col-xs-12">                                        
                        <div class="table-responsive" >
                     <table class="table table-striped" style="width:auto;">
                         <thead>
                             <tr>
                               <th class="col-sm-4">Title of Training/Semenars</th>
                               <th class="col-sm-4">Conducted By/Sponsor</th>
                               <th class="col-sm-3">Date of Training/Semenar</th>
                               <th class="col-md-4">Place</th>
                             </tr>
                           </thead>
                         <tbody>
                             @foreach (var item in Model.Train_Sem)
                             {
                                 <tr>
                                     <td>@Html.DisplayFor(a => item.strTraining)</td>
                                     <td>@Html.DisplayFor(a => item.strSponsor)</td>
                                     <td>@Html.DisplayFor(a => item.strDateTraining)</td>
                                     <td>@Html.DisplayFor(a => item.Place)</td>
                                 </tr>
                             }
                         </tbody>
                      </table>
                    </div>
                   </div>
                   </div>
                  </div>
            </div>

        </div>

    </body>
</html>


