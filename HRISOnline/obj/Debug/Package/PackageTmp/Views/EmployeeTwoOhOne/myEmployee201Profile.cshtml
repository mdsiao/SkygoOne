 <script>

     $(document).ready(function () {
         $('#myTable').dataTable();
     });

     function OpenModalLegalInfo(type,ID) {
         if (type == 1) {
             
             $('.modal-title').html("Confirmation");
             $('.modal-body').html("Are you sure you want to Cancel?");
             
         }
         $('#intIDCan').val(ID);
         $('#type-id2').val(type);
         $('#myModal2').modal();

     }

     function CloseButton() {

         $('#intIDCan').val('');

         $('#myModal2').modal('hide');
         RedirectMe();
     }

</script>

       



