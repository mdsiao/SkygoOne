                               <tr>
                                  <th style="width:auto;">Legal Information Questions</th>
                                  <th style="align-items:center;">YES</th>
                                  <th style="text-align:center;">Circumstance and Details</th>
                               </tr>
                           </thead>
                            <tbody>
                                @foreach (var item in Model.GeneralInformation)
                                {                                 
                                <tr>
                                    <td>Have you ever been convicted of a crime?</td>
                                    @if(item.current_isYes1 == 1)    
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else   
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail1)</td>                    
                                </tr>
                                <tr>
                                     <td>Have you ever been in a situation that resulted to or lead to a crime but of no intent of yours?</td>
                                    @if (item.current_isYes2 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                    <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail2)</td>                    
                                </tr>
                                <tr>                   
                                    <td>Have you Syndicated or organized and planned a crime taht caused the loss of life or property?</td>
                                    @if (item.current_isYes3 == 1)
                                    {
                                        <td style="align-items:center;"><input  type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                    <td style="align-items:center;"><input  type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail3)</td>                  
                                </tr>
                                <tr>
                                    <td>Have you ever been Terminiated from employment for just cause?</td>
                                    @if (item.current_isYes4 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail4)</td>      
                                </tr>
                                    
                                <tr>
                                    <td>Have you ever been Terminiated from employment for just cause?</td>
                                    @if(item.current_isYes5 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail5)</td>                    
                                </tr>
                                    
                                 <tr>
                                    <td>Is there a pending case current against you?</td>
                                     @if (item.current_isYes6 == 1)
                                     {
                                         <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                     }
                                     else
                                     {
                                         <td style="align-items:center;"><input type="checkbox" disabled></td>
                                     }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail6)</td>                        
                                </tr>      
                                <tr>
                                    <td>Are you currently involved in a a case against a person/s or corporation/s</td>
                                    @if (item.current_isYes7 == 1)
                                    {
                                        <td style="align-items:center;"><input type="checkbox" checked disabled></td>
                                    }
                                    else
                                    {
                                        <td style="align-items:center;"><input type="checkbox" disabled></td>
                                    }
                                    
                                    <td style="align-content:center;text-align:center;">@Html.DisplayFor(a => item.current_hasDetail7)</td>                    
                                </tr>  
                                        
                                }
                            </tbody>
                       </table>
                           </div>
                         </div>
                       </div>
                   </div>
                   
               </div>
        </div>



