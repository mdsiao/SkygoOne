@model HRISOnline.Objects.EmpViewDetails
@{
    ViewBag.Title = "ViewDetailEducAttained";
}
<p style="float:right;">
         @Html.ActionLink(" Back", "myEmployee201Profile", null, new { @class="btn btn-danger" })
</p> 
<br /> <br />

<div class="panel panel-primary">
            <div class="panel-heading">
                Educational Attainment 
            </div>
             <div class="panel-body">
                 
                   <div class="container">
                   <div class="row">
                    <div class="col-xs-12">
                     <div class="table-responsive">
                       <table class="table table-striped" style="width:auto;">
                           <thead>
                               <tr>
                                   <th>Educational Attained</th>
                                   <th>Name of School</th>
                                   <th>Degree</th>
                                   <th>Date From</th>
                                   <th>Date To</th>
                                   <th>Honors</th>
                               </tr>
                           </thead>
                           <tbody>
                               @foreach (var item in Model.Educ_attained)
                               {
                                   <tr>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.EducationalAttained)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.NameOfSchool)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.EducationalAttained)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.DateFrom)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.DateTo)</td>
                                       <td class="col-sm-2">@Html.DisplayFor(a => item.Honors)</td>
                                   </tr>
                               }
                           </tbody>
                       </table>
                   </div>
                  </div>
                 </div>
                 </div>
             </div>
        </div>

        <div class="panel panel-primary">
               <div class="panel-heading">
                    Approve and Disapprove Information 
                </div>
               <div class="panel-body"> 
                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th>First Approval</th>  
                               <th>Second Approval</th>                        
                           </tr>
                           
                           
                       </thead>
                        
                       <tbody>
                           <tr>
                            @foreach (var item in Model.EducReason)
                            {
                                if (item.isApprovedFirst == 1)
                                {
                                       <td style="color:green;">Approved</td>
                                }
                                else if(item.isApprovedFirst == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }  
                                else
                                {
                                    <td></td>
                                }
                                
                                if (item.isApprovedSecond == 1)
                                {
                                    <td style="color:green;">Approved</td>
                                }
                                if (item.isApprovedSecond == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }
                                
                                
                             }
                            
                           </tr>
                       </tbody>
                   </table>

                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th style="width:457px;">Reason</th>  
                                                   
                           </tr>
                                                
                       </thead>
                        <tr>
                            @foreach (var item in Model.EducReason)
                            {                        
                            <td>@Html.DisplayFor(a => item.DisApproveReason)</td>
                            }
                        </tr>
                       <tbody>
                         
                       </tbody>
                   </table>

               </div>
           </div>



