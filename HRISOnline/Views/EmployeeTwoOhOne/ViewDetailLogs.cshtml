@model HRISOnline.Objects.EmpViewDetails
@{
    ViewBag.Title = @ViewBag.MyTitle;
}

<!DOCTYPE html>
<html>
       <body>
       <p style="float:right;">
         @Html.ActionLink(" Back", "myEmployee201Profile", null, new { @class="btn btn-danger" })
       </p>           
                 
      <br /> <br />
           <div class="panel panel-primary">
            <div class="panel-heading">
                Personal Profile
            </div>

            <div class="panel-body"> 
                <table>
                   
                    <tbody>

                       @foreach (var item in Model.EmployeeProf)
                       {
                         <tr>
                            <th class="col-md-4" >Employee ID </th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.EmployeeId)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Employee Name</th>
                            <td class="col-md-4"> @Html.DisplayFor(a => item.EmployeeName)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Email</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.Email)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Blood Type</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.BloodType)</td>
                        </tr> 
                         <tr>
                            <th class="col-md-4" style="">Home Phone No.</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.HomeNum)</td>
                        </tr>  
                        <tr>
                            <th class="col-md-4" style="">Mobile Phone No.</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.MobileNum)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Permanent Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PermanentAdd)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Present Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PresentAdd)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Provincial Address</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.ProvincialAdd)</td>
                        </tr>  
                        <tr>
                            <th class="col-md-4" style="">Person to Notify incase of Emergency</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.PersonToNofify)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Relation</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.Relation)</td>
                        </tr>
                        <tr>
                            <th class="col-md-4" style="">Contact Number</th>
                            <td class="col-md-4">@Html.DisplayFor(a => item.ContactNum)</td>
                        </tr>
                          
                       }
                    </tbody>
                </table>

            </div>
        </div>
           <br /><br /><br />

           <div class="panel panel-primary">
               <div class="panel-heading">
                    Approve and Disapprove Information 
                </div>
               <div class="panel-body"> 
                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th>First Approval</th>  
                               <th>Second Approval</th>                        
                           </tr>
                           
                           
                       </thead>
                        
                       <tbody>
                           <tr>
                            @foreach (var item in Model.EmployeeProf)
                            {
                                if (item.isApprovedFirst == 1)
                                {
                                       <td style="color:green;">Approved</td>
                                }
                                else if(item.isApprovedFirst == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }  
                                else
                                {
                                    <td></td>
                                }
                                
                                if (item.isApprovedSecond == 1)
                                {
                                    <td style="color:green;">Approved</td>
                                }
                                if (item.isApprovedSecond == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }
                                
                                
                             }
                            
                          
                                
                                

                    
                           </tr>
                       </tbody>
                   </table>

                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th style="width:457px;">Reason</th>  
                                                   
                           </tr>
                           
                           
                       </thead>
                        <tr>
                            @foreach (var item in Model.EmployeeProf)
                            {                        
                            <td>@Html.DisplayFor(a => item.DisApproveReason)</td>
                            }
                        </tr>
                       <tbody>
                         
                       </tbody>
                   </table>

               </div>
           </div>



      </body>
</html>

