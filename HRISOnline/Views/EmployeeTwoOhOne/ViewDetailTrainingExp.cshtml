@model HRISOnline.Objects.EmpViewDetails
@{
    ViewBag.Title = "ViewDetailTrainingExp";
}

<p style="float:right;">
         @Html.ActionLink(" Back", "myEmployee201Profile", null, new { @class="btn btn-danger" })
</p>           
                 
<br /> <br />
    <div class="panel panel-primary">
            <div class="panel-heading">
                Training And Semenars 
            </div>
            <div class="panel-body">
                 <div class="container">
                     <div class="row">
                     <div class="col-xs-12">
                         <div class="table-responsive">
                     <table class="table table-striped" style="width:1000px;">
                         <thead>
                             <tr>
                               <th class="col-md-1">Title of Training/Semenars</th>
                               <th class="col-md-1">Conducted By/Sponsor</th>
                               <th class="col-md-1">Date of Training/Semenar</th>
                               <th class="col-md-2">Place</th>
                             </tr>
                           </thead>
                         <tbody>
                             @foreach (var item in Model.Train_Sem)
                             {
                                 <tr>
                                     <td>@Html.DisplayFor(a => item.strTraining)</td>
                                     <td>@Html.DisplayFor(a => item.strSponsor)</td>
                                     <td>@Html.DisplayFor(a => item.strDateTraining)</td>
                                     <td>@Html.DisplayFor(a => item.Place)</td>
                                 </tr>
                             }
                         </tbody>
                      </table>
                    </div>
                   </div>
                   </div>
                  </div>
            </div>

        </div>


            <div class="panel panel-primary">
               <div class="panel-heading">
                    Approve and Disapprove Information 
                </div>
               <div class="panel-body"> 
                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th>First Approval</th>  
                               <th>Second Approval</th>                        
                           </tr>
                           
                           
                       </thead>
                        
                       <tbody>
                           <tr>
                            @foreach (var item in Model.TrainingReason)
                            {
                                if (item.isApprovedFirst == 1)
                                {
                                       <td style="color:green;">Approved</td>
                                }
                                else if(item.isApprovedFirst == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }
                                
                                
                                if (item.isApprovedSecond == 1)
                                {
                                    <td style="color:green;">Approved</td>
                                }
                                if (item.isApprovedSecond == 0)
                                {
                                    <td style="color:red;">Disapproved</td>
                                }
                                                                                            
                             }
                            
                           </tr>
                       </tbody>
                   </table>

                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th style="width:457px;">Reason</th>                                                     
                           </tr>
                                                
                       </thead>
                       <tbody>
                        <tr>
                            @foreach (var item in Model.TrainingReason)
                            {                        
                            <td>@Html.DisplayFor(a => item.DisApproveReason)</td>
                            }
                        </tr>

                       </tbody>
                   </table>

               </div>
           </div>
