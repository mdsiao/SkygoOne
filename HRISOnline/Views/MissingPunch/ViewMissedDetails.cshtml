@model HRISOnline.Objects.ViewDetailsLogs
@{
    ViewBag.Title = @ViewBag.MyTitle;
}

<!DOCTYPE html>
<html>
    <head>
        <title>View Details</title>
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
         <script type="text/javascript" src="@Url.Content("https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js")"></script>
         <script type="text/javascript" src="@Url.Content("https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css")"></script>       
         
    </head>
<body>
<p style="float:right;">
         @Html.ActionLink(" Back", "MissingPunchApproval", null, new { @class="btn btn-danger" })
</p>
 <br /><br /><br />

 
     
   
   
<div class="panel panel-primary">
        <div class="panel-heading">
            Current Filed
        </div>

        <div class="panel-body"> 
             <table class="table table-striped table-bordered" style="width:100%;">
                 <thead>
                        <tr>
                            <th class="col-md-1 text-center">Date Filed</th>                                                  
                            <th class="col-md-1 text-center">Actual Date</th>
                            <th class="col-md-1 text-center">Adjustment Type</th>
                            <th class="col-md-1 text-center">Time in</th>
                            <th class="col-md-1 text-center">Time Out</th>
                            <th class="col-md-1 text-center">Reason</th>

                            
                        </tr>
                    </thead>
                <tbody>
                        @foreach (var item in Model.ViewMissedPunch)
                       {
                        <tr>                            
                            <td class="col-md-1 text-center"> @Html.DisplayFor(a => item.DateFiled)</td>                         
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.DatActualDate)</td>
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.AdjustmentType)</td>                           
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.MissedTimeIn)</td>                        
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.MissedTimeOut)</td>                         
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.Reason)</td>
                        </tr>                                                
                       }
                </tbody>
            </table>
        </div>
</div>

    <br /><br /><br />

@foreach (var items in Model.ViewMissedPunch)
{
    if(items.AdjustmentTypeID == 1)
    {
<div class="panel panel-primary">
        <div class="panel-heading">
            Biometric Logs     
        </div>
          <div class="panel-body"> 

              <table class="table table-striped table-bordered" style="width:100%;">
                 <thead>
                        <tr>
                            <th class="col-md-1 text-center">Log Date</th>                                                  
                            <th class="col-md-1 text-center">Time In</th>
                            <th class="col-md-1 text-center">Time Out</th>
                            

                            
                        </tr>
                    </thead>
                <tbody>
                        @foreach (var item in Model.ViewMissedPunchLogs)
                       {
                        <tr>                            
                            <td class="col-md-1 text-center"> @Html.DisplayFor(a => item.DatLogDate)</td>                         
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.BioTimeIn)</td>
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.BioTimeOut)</td>                           
                        </tr>                                                
                       }
                </tbody>
            </table>

          </div>

</div>
    }
    else 
    {
           <div class="panel panel-primary">
        <div class="panel-heading">
            Adjustment Logs     
        </div>
          <div class="panel-body"> 

              <table class="table table-striped table-bordered" style="width:100%;">
                 <thead>
                        <tr>
                            <th class="col-md-1 text-center">Log Date</th>                                                  
                            <th class="col-md-1 text-center">Time In</th>
                            <th class="col-md-1 text-center">Time Out</th>
                            <th class="col-md-1 text-center">No of Hours</th>
                            @*<th class="col-md-1 text-center">EmployeeID</th>
                            <th class="col-md-1 text-center">Approved/DisApproved By</th>*@
                            <th class="col-md-1 text-center">Status</th>
                            <th class="col-md-1 text-center">Date and Time Approved/DisApproved</th>
                            <th class="col-md-1 text-center">Reason</th>
                        </tr>
                    </thead>
                <tbody>
                        @foreach (var item in Model.ViewMissedPunchLogs)
                       {
                        <tr>                            
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.DatLogDate)</td>                         
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.BioTimeIn)</td>
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.BioTimeOut)</td>
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.BioNoHours)</td> 
                            @*<td class="col-md-1 text-center">@Html.DisplayFor(a => item.intMstEmpPersonal)</td> 
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.DisApporvedBy)</td>*@ 
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.strStatus)</td> 
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.DisapproveDateTime)</td> 
                            <td class="col-md-1 text-center">@Html.DisplayFor(a => item.DisapproveReason)</td>                            
                        </tr>                                                
                       }
                </tbody>
            </table>

          </div>

</div>
            
    }
}
     
</body>
</html>
