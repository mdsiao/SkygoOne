                        $('#ShowIcons').hide();
                        $('#ShowIconsDisabled').hide();

                        $('#ShowIconForLike').show();
                        $('#ShowIconForLikeInactive').hide();
                        $('#ShowIconForHeart').hide();
                        $('#ShowIconForHeartInactive').hide();
                        $('#ShowIconForSad').hide();
                        $('#ShowIconForSadInactive').hide();
